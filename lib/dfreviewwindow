from multiprocessing import Process
from tkinter import *
from tkinter import messagebox
from tkinter import ttk
from ttkthemes import themed_tk
from datetime import datetime as dt
import pandas as pd

pd.set_option('display.max_rows', 150)

class DFReviewWindow(themed_tk.ThemedTk, Toplevel):
    def __init__(self, theme, df):
        super().__init__(theme=theme, themebg=True)
        s = ttk.Style()
        s.configure('.', font=('Arial', 12))
        self.title('Discussion Bot: Posts/Replies Review')
        self.geometry("800x600")

        bgcolor = self.config('background')[4] # Current background color
        self.window_title_label = Label(
            self, text='Review Discussions under Min Word Count',
            fg='#22a6b5',
            bg=bgcolor,
            font=('Arial', 15),
            wraplength=400
        )

        self.text_area = Text(self, height=32, width=80)

        self.window_title_label.pack()
        self.text_area.pack()

        self.text_area.insert(INSERT, chars=df.__str__())